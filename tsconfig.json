{
  "compilerOptions": {
    "rootDir": "./static/js/src",
    "outDir": "./static/js/dist",
    "module": "es2020",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  }
}